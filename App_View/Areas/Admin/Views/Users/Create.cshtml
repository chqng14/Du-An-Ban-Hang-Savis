@model App_Data.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="TaiKhoan" class="control-label">Tài Khoản</label>
            <input type="text" asp-for="TaiKhoan" class="form-control" id="inputEmail4" placeholder="Email">
            <span asp-validation-for="TaiKhoan" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="MatKhau" for="inputPassword4">Password</label>
            <input type="password" asp-for="MatKhau" class="form-control" id="inputPassword4" placeholder="Password">
            <span asp-validation-for="MatKhau" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label for="inputAddress">Họ Và Tên</label>
        <input type="text" asp-for="Ten" class="form-control" id="inputAddress" placeholder="1234 Main St">
        <span asp-validation-for="Ten" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="inputAddress2" asp-for="DiaChi">Địa Chỉ</label>
        <input type="text" class="form-control" asp-for="DiaChi" id="inputAddress2" placeholder="Apartment, studio, or floor">
        <span asp-validation-for="DiaChi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="inputAddress">Họ Và Tên</label>
        <input type="email" asp-for="Email" class="form-control" id="inputAddress" placeholder="1234 Main St">
        <span asp-validation-for="Ten" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="inputAddress2" asp-for="Sdt">Số Điện Thoại</label>
        <input type="text" class="form-control" asp-for="Sdt" id="inputAddress2" placeholder="Apartment, studio, or floor">
        <span asp-validation-for="Sdt" class="text-danger"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputCity" asp-for="NgaySinh">Ngày Sinh</label>
            <input type="datetime" class="form-control" asp-for="NgaySinh" id="inputCity">
            <span asp-validation-for="NgaySinh" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label for="inputState" asp-for="IdRole">State</label>
            <select id="inputState" asp-for="IdRole" class="form-control" asp-items="@ViewBag.Role"><option selected>---Chức Vụ---</option></select>
            <span asp-validation-for="IdRole" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label for="inputZip">Giới Tính</label>
            <select id="inputZip" asp-for="GioiTinh" class="form-control"><option>---Chức Vụ---</option>
                <option value="0">Nam</option>
                <option value="0">Nữ</option>
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
</form>
<div>
    <a asp-action="Index" asp-controller="Users" asp-area="Admin">Trở Về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

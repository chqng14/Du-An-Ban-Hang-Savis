@model App_Data.Models.CartDetails

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="IDUser" class="control-label">Khách Hàng</label>
            <select asp-for="IDUser" class="form-control" asp-items="@ViewBag.User"></select>
            <span asp-validation-for="IDUser" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="IDCTSP" for="inputPassword4">Sản Phẩm</label>
            <select asp-for="IDCTSP" class="form-control" asp-items="@ViewBag.ProductDetail"></select>
            <span asp-validation-for="IDCTSP" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputCity" asp-for="GiaKhuyenMai">Giá Khuyến Mãi</label>
            <input type="number" class="form-control" asp-for="GiaKhuyenMai" id="inputCity">
            <span asp-validation-for="GiaKhuyenMai" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label for="inputState" asp-for="SoLuong">Số Lượng</label>
            <input type="number" class="form-control" asp-for="SoLuong" id="inputState">
            <span asp-validation-for="SoLuong" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label for="inputCity" asp-for="TrangThai">Trạng Thái</label>
            <input type="number" class="form-control" asp-for="TrangThai" id="inputCity">
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Sửa</button>
</form>
<div>
    <a asp-action="Index" asp-controller="CartDetails" asp-area="Admin">Trở Về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

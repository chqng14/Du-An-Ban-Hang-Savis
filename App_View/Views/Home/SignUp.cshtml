<html lang="en" dir="ltr">
<head>
	<meta charset="UTF-8">
	<title>Đăng ký</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="container">
		<div class="title">Đăng Ký</div>
		<div class="content">
			@if (!string.IsNullOrEmpty(signUpFail))
			{
				<div class="alert alert-danger" role="alert">
					@signUpFail
				</div>
			}
			<form asp-action="SignUp" asp-controller="Home">
				<div class="user-details">
					<div class="input-box">
						<span class="details">Họ và tên</span>
						<input asp-for="Ten" class="form-control" placeholder="Nhập tên của bạn..." />
						<span asp-validation-for="Ten" class="text-danger"></span>
					</div>
					<div class="input-box">
						<span class="details">Tài khoản</span>
						<input asp-for="TaiKhoan" class="form-control" placeholder="Nhập tên tài khoản..." />
						<span asp-validation-for="TaiKhoan" class="text-danger"></span>
					</div>
					<div class="input-box">
						<span class="details">Email</span>
						<input asp-for="Email" class="form-control" placeholder="Nhập email..." />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="input-box">
						<span class="details">Số điện thoại</span>
						<input asp-for="Sdt" class="form-control" placeholder="Nhập số điện thoại..." />
						<span asp-validation-for="Sdt" class="text-danger"></span>
					</div>
					<div class="input-box">
						<span class="details">Password</span>
						<input type="password" asp-for="MatKhau" class="form-control" placeholder="Nhập mật khẩu..." />
						<span asp-validation-for="MatKhau" class="text-danger"></span>
					</div>
					<div class="input-box">
						<span class="details">Confirm Password</span>
						<input type="password" asp-for="@rePassword" class="form-control" placeholder="Nhập lại mật khẩu..." />
						<span asp-validation-for="MatKhau" class="text-danger"></span>
					</div>
				</div>
				<div class="gender-details">
					<input type="radio" name="gender" asp-for="GioiTinh" value="0" id="dot-1" />
					<input type="radio" name="gender" asp-for="GioiTinh" value="1" id="dot-2" />
					<span class="gender-title">Gender</span>
					<div class="category">
						<label for="dot-1">
							<span class="dot one"></span>
							<span class="gender">Nam</span>
						</label>
						<label for="dot-2">
							<span class="dot two"></span>
							<span class="gender">Nữ</span>
						</label>
					</div>
				</div>
				<div class="button">
					<input type="submit" value="Đăng ký">
				</div>
				<div class="signup-link">
					Đã có tài khoản? <a asp-controller="Home" asp-action="Login">Đăng Nhập</a>
				</div>
			</form>
		</div>
	</div>
</body>
</html>
